# ==============================================
# AVM Project Environment Variables
# ==============================================
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control

# ==============================================
# GCP Configuration
# ==============================================
GCP_PROJECT_ID=primal-result-478707-k2
GCP_REGION=us-central1

# ==============================================
# BigQuery Configuration
# ==============================================
BIGQUERY_DATASET=wed_scrape_sync
BIGQUERY_TABLE=master_listings

# ==============================================
# Google Cloud Storage
# ==============================================
GCS_BUCKET=linear_regression_model

# ==============================================
# Authentication (for Docker containers)
# ==============================================
# Path to service account credentials JSON file
# Leave commented if using Application Default Credentials
# GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/credentials.json

# ==============================================
# Application Configuration
# ==============================================
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Worker configuration (for production)
WORKERS=2

# ==============================================
# Docker Compose Specific
# ==============================================
# Compose project name (optional)
COMPOSE_PROJECT_NAME=avm

# ==============================================
# Monitoring (Optional)
# ==============================================
# Grafana admin password
GRAFANA_ADMIN_PASSWORD=admin

# Prometheus retention period
PROMETHEUS_RETENTION=15d

# ==============================================
# Security (Production)
# ==============================================
# API rate limit (requests per second)
API_RATE_LIMIT=10

# API rate limit burst
API_RATE_BURST=20

# ==============================================
# Model Configuration
# ==============================================
# Path to model artifacts (inside container)
MODEL_PATH=/app/artifacts/models

# Auto-reload models on change (development only)
MODEL_AUTO_RELOAD=false

# ==============================================
# Database Connection (if needed)
# ==============================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=avm_db
# DB_USER=avm_user
# DB_PASSWORD=secure_password

# ==============================================
# Email Notifications (Optional)
# ==============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=alerts@your-domain.com

# ==============================================
# Feature Flags (Optional)
# ==============================================
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable performance profiling
ENABLE_PROFILING=false